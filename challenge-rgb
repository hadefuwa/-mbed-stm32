#include "mbed.h"
#include "platform/mbed_thread.h"

DigitalIn SW1 = (D2);
DigitalIn SW2 = (D3);
DigitalIn SW3 = (D4);
DigitalIn SW4 = (D5);
BusOut Red = (D7);
BusOut Green = (D8);
BusOut Blue = (D9);

#define blinkRate 1000

int main()
{
    SW1.mode(PullUp);
    SW2.mode(PullUp);
    SW3.mode(PullUp);
    SW4.mode(PullUp);
    
    while (true) 
    {
        Red = 1;
        Green = 1;
        Blue = 1;
        thread_sleep_for(blinkRate);  
              
        while(SW1 == 0)
        {
            Red = 1;
            Green = 0;
            Blue = 0;
            thread_sleep_for(blinkRate);        
        }
        while(SW2 == 0)
        {
            Red = 0;
            Green = 1;
            Blue = 0;
            thread_sleep_for(blinkRate);        
        }
        while(SW3 == 0)
        {
            Red = 0;
            Green = 0;
            Blue = 1;
            thread_sleep_for(blinkRate);        
        }
        while(SW4 == 0)
        {
            Red = 1;
            Green = 1;
            Blue = 1;
            thread_sleep_for(blinkRate);        
        }        
    }
}


