#include "mbed.h"
#include "platform/mbed_thread.h"

DigitalIn mySwitches[] = {((D2), (D3), (D4), (D5)};
BusOut RGB((D7), (D8), (D9));

#define blinkRate 1000

int main()
{
    int x;
    
    for (x = 0; x < 4; loop_var++)
    {
        mySwitches[x].mode(PullUp); 
        RGB[x] = 0;   
    }
    
    while (true) 
    {
        RGB = 0x07;
        thread_sleep_for(blinkRate);        
        
        while(D2 == 0)
        {
            RGB = 0x00;
            thread_sleep_for(blinkRate);         
        }
    }
}


